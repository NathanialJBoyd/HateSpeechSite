---
// Simple counter that uses localStorage
---

<div class="visitor-counter">
    <div class="counter-content">
            You are visitor number: <b id="counter-display">00000</b>
    </div>
</div>

<script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
        // Get or initialize the counter
        let count = localStorage.getItem('visitorCount');

        if (!count) {
            // Start with a random number to make it look realistic
            count = Math.floor(Math.random() * 1000) + 64532;
        } else {
            count = parseInt(count);
        }

        // Increment the counter
        count++;
        localStorage.setItem('visitorCount', count.toString());

        // Display with leading zeros
        const display = document.getElementById('counter-display');
        if (display) {
            display.textContent = count.toString().padStart(5, '0');
        }
    });
</script>