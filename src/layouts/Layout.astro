---
export interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Classic meta tags -->
    <meta name="description" content="Welcome to my awesome 1998 website!">
    <meta name="keywords" content="web, site, personal, 1998, internet">

    <!-- Import our retro styles -->
    <link rel="stylesheet" href="/styles/global.css" />
</head>
<body bgcolor="#FFFFFF" text="#000000" link="#0000FF" vlink="#800080" alink="#FF0000">
<!-- Animated construction gif (optional) -->
<div style="text-align: center;">
    <img src="/under-construction.gif" alt="Under Construction" width="400" height="50" />
</div>

<!-- Main content -->
<main>
    <slot />
</main>

<!-- Visitor counter -->
<div style="text-align: center; margin-top: 20px;">
    <img src="/visitor-counter.gif" alt="Visitor Counter" width="88" height="31" />
    <br />
    <font size="2" face="Arial">
        You are visitor number: <b>00001</b>
    </font>
</div>

<!-- Blink tag for extra nostalgia -->
<div style="text-align: center;">
    <blink>Last updated: <script>document.write(new Date().toLocaleDateString())</script></blink>
</div>
</body>
</html>